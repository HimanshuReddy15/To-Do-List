<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">

        <form action="/delete" method="post">
        <% newListItems.forEach(function(item){ %>
            <div class="item">
                <input type="checkbox">
                <p> <%= item.name %> </p>
                <button class="delete" type="submit" name="delete" value=<%= item._id %>><img src="icons/trash3 (1).svg"></button>
            </div>
        <% }); %>
        <input type="hidden" name="listName" value= <%= listTitle %>>
    </form>
       
    <form class="item" action="/" method="POST">
        <input type="text" name="newItem" placeholder="New item" autocomplete="off">
        <button type="submit" class="submit" name="list" value= <%=listTitle%> >+</button>
    </form>
    </div>
    <%- include("footer") -%>
